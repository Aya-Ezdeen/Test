@model List<UserViewModel>


    <h1>System Users</h1>
    <hr/>
    <a href="~/User/Create" class=" btn btn-primary">Add User</a>
    @if(Model.Any()){
       <table class ="table table-hover">
           <tr>
               <th>UserName</th>
                <th>Email</th>
                 <th>Phone</th>
                  <th>Creation Date</th>
           </tr>
           @foreach (var user in Model)
          {
                         <tr>
               <th>@user.UserName</th>
                <th>@user.Email</th>
                 <th>@user.PhoneNumber</th>
                 
           </tr>
              
          }
       </table> 
    }
    else{
        <div class="alert alert-warning">
            No Users
        </div>
    }